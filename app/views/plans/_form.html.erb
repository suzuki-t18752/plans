<% if message.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @plan, local: true) do |f| %>

  <p><%= f.label :title, 'タイトル' %></p>
  <p><%= f.text_field :title %></p>
  
  <p><%= f.label :startday, '予定開始日時' %></p>
  <p><%= f.datetime_select :startday, {:use_month_numbers => true} %></p>
  
  <p><%= f.label :endday, '予定終了日時' %></p>
  <p><%= f.datetime_select :endday, {:use_month_numbers => true} %></p>
  
  <p><%= f.label :content, '予定内容' %></p>
  <p><%= f.text_field :content %></p>
  
  <p><%= f.label :diary, '日記' %></p>
  <p><%= f.text_field :diary %></p>

  <p><%= f.submit '投稿' %></p>
<% end %>