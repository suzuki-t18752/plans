<% if message.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @plan, local: true) do |f| %>
  <div class="planformbox">
    <%= f.label :title, 'タイトル', class: "planlabel" %>
    <%= f.text_field :title, class: "planform" %>
  </div>
  <div class="planformbox">
    <%= f.label :startday, '予定開始日時', class: "planlabel" %>
    <%= f.datetime_select :startday, {:use_month_numbers => true}, class: "dayform" %>
  </div>
  <div class="planformbox">
    <%= f.label :endday, '予定終了日時', class: "planlabel" %>
    <%= f.datetime_select :endday, {:use_month_numbers => true}, class: "dayform" %>
  </div>
  <div class="planformbox">
    <%= f.label :content, '予定内容', class: "planlabel" %>
    <%= f.text_area :content, class: "planform" %>
  </div>
  <div class="planformbox">
    <%= f.label :diary, '日記', class: "planlabel" %>
    <%= f.text_area :diary, class: "planform" %>
  </div>
  <%= f.submit '投稿', class: "planbtn" %>
<% end %>